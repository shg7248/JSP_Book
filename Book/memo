CREATE TABLE COMMON_CODE (
	GROUPCODE	NUMBER,
	CODE		NUMBER PRIMARY KEY,
	CODENAME	VARCHAR2(20),
	REG_DATE 	DATE DEFAULT SYSDATE
);

