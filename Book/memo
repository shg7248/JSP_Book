	ONUM			NUMBER,
	MNUM			NUMBER,
	PNUM			NUMBER,
	OQTY			NUMBER,
	FINAL_PRICE		NUMBER,
	FINAL_POINT		NUMBER,
	REG_DATE		DATE DEFAULT SYSDATE
);

