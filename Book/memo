---- 독자평

CREATE TABLE BOOK_REVIEW (
	RNUM 		NUMBER PRIMARY KEY,
	PNUM		NUMBER,
	MNUM		NUMBER,
	CONTENDS	VARCHAR2(300), -- 한글 100자
	RATING		NUMBER(1)
);

---- 독자평
