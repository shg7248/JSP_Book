CREATE TABLE BOOK_CATEGORY (
	CATEGROUP	NUMBER,
	CATECODE	NUMBER PRIMARY KEY,
	CATENAME	VARCHAR2(30),
	REG_DATE	DATE DEFAULT SYSDATE
);


